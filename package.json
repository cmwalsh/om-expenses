{
  "name": "om-expense",
  "scripts": {
    "backend:dev": "pnpm --filter backend run dev",
    "frontend:dev": "pnpm --filter frontend run dev",
    "common:dev": "pnpm --filter common run dev",
    "backend:build": "pnpm --filter backend run build",
    "frontend:build": "pnpm --filter frontend run build",
    "common:build": "pnpm --filter common run build",
    "dev": "source ./.env && npm-run-all --parallel backend:dev frontend:dev common:dev",
    "build": "npm-run-all common:build backend:build frontend:build"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
